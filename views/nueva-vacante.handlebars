<main class="contenedor">
    <form action="/vacancies/new" method="POST" class="default-form">
        <h3>General Information</h3>
        <div class="campo">
            <label for="titulo">Title</label>
            <input type="text" id="titulo" name="titulo" placeholder="Ex: React Developer" required>
        </div>
        <div class="campo">
            <label for="empresa">Company</label>
            <input type="text" id="empresa" name="empresa" placeholder="Company Hiring" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Location</label>
            <input type="text" id="ubicacion" name="ubicacion" placeholder="Ex: Salt Lake or Remote" required>
        </div>
        <div class="campo">
            <label for="salario">Salary (USD)</label>
            <input type="number" id="salario" name="salario" placeholder="Ex: $900 USD" required>
        </div>
        <div class="campo">
            <label for="contrato">Contract</label>
            <select id="contrato" name="contrato">
                <option value="">-- Select --</option>
                <option value="Freelance">Freelance</option>
                <option value="Full Time">Full Time</option>
                <option value="Half Time">Half Time</option>
                <option value="By Project">By Project</option>
            </select>   
        </div>
       <h3>Job Description</h3>
        <div class="campo descripcion">
            <label for="descripcion">Description</label>
            <input type="hidden" id="x" name="descripcion">
        </div>
            <trix-editor input="x"></trix-editor> 
        </div>
    </form>
</main>